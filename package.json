{
  "name": "track-duration",
  "version": "0.1.1",
  "description": "Converts milliseconds to a format like Spotify's track durations",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "tsc -w",
    "lint": "tslint -c tslint.json 'lib/**/*.{ts,tsx}'",
    "test": "jest",
    "test:dev": "jest --watch",
    "coverage": "npm test -- --coverage",
    "build": "tsc --declaration",
    "prepare": "npm test && npm run lint && npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "24.0.0",
    "jest": "24.0.0",
    "ts-jest": "23.10.5",
    "tslint": "5.12.1",
    "typescript": "3.3.1"
  },
  "author": {
    "name": "Rickard Laurin",
    "email": "rickard.laurin@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/believer/track-duration.git"
  },
  "keywords": [
    "Music",
    "Duration",
    "Spotify",
    "Parser",
    "Milliseconds",
    "Track"
  ],
  "bugs": {
    "url": "https://github.com/believer/track-duration/issues"
  },
  "homepage": "https://github.com/believer/track-duration#readme",
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(ts|tsx|js)"
    ]
  }
}
